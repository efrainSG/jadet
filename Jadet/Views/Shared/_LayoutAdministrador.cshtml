<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Serna Sistemas</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/jquery-ui.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/jadet.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/Jadet/forms.js" type="text/javascript"></script>
    <script src="~/Scripts/Jadet/principal.js" type="text/javascript"></script>
    <script>
        var categorias = new Array();
        var tiposcatalogos = new Array();
        var estatus = new Array();
        var zonas = new Array();
        var tiposnotas = new Array();
        var tipoestatus = new Array();
        const botones = "#btnGuardar, #btnGuardarCliente, #btnGuardarCatalogo, #btnGuardarEstatus, #btnEliminar, #btnGuardarNota, #btnEliminarCliente, #btnEliminarCatalogo, #btnEliminarEstatus, #btnGuardarComentario";
        const K_ESTATUSNOTA = 3;
        const K_ESTATUSUSUARIO = 1;
        const K_ESTATUSPRODUCTO = 2;
    </script>
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Jadet", "Index", "Home", new
                {
                    area = ""
                }, new
                {
                    @class = "navbar-brand"
                })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Productos", "Productos", "Administrador")</li>
                    <li>@Html.ActionLink("Clientes", "Clientes", "Administrador")</li>
                    <li>@Html.ActionLink("Notas", "Notas", "Administrador")</li>
@*                    <li>@Html.ActionLink("Guías", "Guias", "Administrador")</li>*@
                    <li>@Html.ActionLink("Configuración", "Configuracion", "Administrador")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Jadet</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <div class="row">
                        <div class="col-sm-11">
                            <h3 class="modal-title" id="modalHdr">Modal Header</h3>
                        </div>
                        <div class="col-sm-1">
                            <button type="button" class="btn btn-sm btn-F80012-b" data-dismiss="modal"><i class="fa fa-lg fa-times"></i></button>
                        </div>
                        @*<button type="button" class="close" data-dismiss="modal">&times;</button>*@
                    </div>
                </div>
                <div class="modal-body" id="divModalBody">
                </div>
                <div class="modal-footer" id="divModalFooter">
                    <button type="button" class="btn btn-sm btn-7309AA-a" data-dismiss="modal" id="btnGuardar"><i class="fa fa-lg fa-check"></i></button>
                    <button type="button" class="btn btn-sm btn-7309AA-a" data-dismiss="modal" id="btnGuardarCliente"><i class="fa fa-lg fa-check"></i></button>
                    <button type="button" class="btn btn-sm btn-7309AA-a" data-dismiss="modal" id="btnGuardarCatalogo"><i class="fa fa-lg fa-check"></i></button>
                    <button type="button" class="btn btn-sm btn-7309AA-a" data-dismiss="modal" id="btnGuardarEstatus"><i class="fa fa-lg fa-check"></i></button>
                    <button type="button" class="btn btn-sm btn-7309AA-a" data-dismiss="modal" id="btnGuardarNota"><i class="fa fa-lg fa-check"></i></button>
                    <button type="button" class="btn btn-sm btn-7309AA-a" data-dismiss="modal" id="btnGuardarComentario"><i class="fa fa-lg fa-check"></i></button>
                    <button type="button" class="btn btn-sm btn-F80012-a" data-dismiss="modal" id="btnEliminar"><i class="fa fa-lg fa-trash"></i></button>
                    <button type="button" class="btn btn-sm btn-F80012-a" data-dismiss="modal" id="btnEliminarCliente"><i class="fa fa-lg fa-trash"></i></button>
                    <button type="button" class="btn btn-sm btn-F80012-a" data-dismiss="modal" id="btnEliminarCatalogo"><i class="fa fa-lg fa-trash"></i></button>
                    <button type="button" class="btn btn-sm btn-F80012-a" data-dismiss="modal" id="btnEliminarEstatus"><i class="fa fa-lg fa-trash"></i></button>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
