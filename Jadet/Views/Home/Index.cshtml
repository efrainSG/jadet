        <h1>JADET</h1>
        <p class="lead">Bienvenidos a donde encontrarán todo el material para hacer sus sueños realidad.</p>
        <p></p>
    </div>
    <div class="col-sm-3 card">
        @using (Html.BeginForm("hazLogin", "Home"))
        {
            <div class="row">
                <div class="col-sm-12">
                    @Html.TextBoxFor(m => m.usuario, new { @class = "form-control", placeholder = "Usuario" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @Html.PasswordFor(m => m.password, new { @class = "form-control", placeholder = "Contraseña" })
                </div>
            </div>
            <div class="row card-footer">
                <div class="col-sm-12 text-center">
                    <div class="row col-sm-12">
                        <input type="submit" class="btn btn-primary" value="Iniciar sesión" />
                    </div>
                    <div class="row">
                        <span class="col-sm-12 text-danger">
                            @Html.DisplayFor(m=>m.ErrorMensaje)
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

