@model Jadet.Models.loginmodel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-sm-2">
        <img src="https://scontent.fpbc2-1.fna.fbcdn.net/v/t1.15752-9/102330860_2645200832468537_2988515394495635548_n.jpg?_nc_cat=110&_nc_sid=b96e70&_nc_eui2=AeFA4fBNKbOXyCjErnVOHU-jkvkSYo9N-_-S-RJij037_1E-Dl0h9KYS0cpaieekaPY&_nc_ohc=IFljswWXq8MAX_JaAhL&_nc_ht=scontent.fpbc2-1.fna&oh=bec1cced478132cd76c5558198c43e4e&oe=5F2C7578"
