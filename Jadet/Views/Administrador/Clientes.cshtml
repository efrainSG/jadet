@model Jadet.Models.listaclientesmodel

@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h2>@ViewBag.Title</h2>
<table class="table table-active table-bordered">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Zona de paquetería</th>
            <th>Estátus</th>
            <th>
                <a href="#" class="btn btn-success" id="btnagregarCliente"><i class="glyphicon glyphicon-plus"></i></a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Items)
        {
        <tr>
            <td>@item.usuario</td>
            <td>@item.Nombre</td>
            <td>@item.Direccion</td>
            <td>@item.Telefono</td>
            <td>@item.ZonaPaqueteria</td>
            <td>@item.IdEstatus</td>
            <td>
                <a href="#" class="btn btn-warning" data-content="@item.IdCliente" id="btneditarCliente"><i class="glyphicon glyphicon-edit"></i></a>
                <a href="#" class="btn btn-danger" data-content="@item.IdCliente" id="btneliminarCliente"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
